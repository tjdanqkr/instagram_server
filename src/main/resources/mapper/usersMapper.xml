<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.user.repository.UserMapper">
    <select id="getUser" resultType="SelectUserDto" >
        SELECT
            id, userId, name, img
        FROM
            users
    </select>
    <select id="getUserById" resultType="SelectUserDto" parameterType="Integer" >
        SELECT
            id, userId, name, img
        FROM
            users
        where id = #{id}
    </select>
    <insert id="insertUser" parameterType="UserDto" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        INSERT INTO
            users
            (userId, password, name, img)
        VALUE
            (#{userId}, #{password}, #{name}, #{img})
    </insert>
    <update id="updateUser" >
        UPDATE users
        <set>
            <if test="UserDto.name != null">
                name = #{UserDto.name},
            </if>
            <if test="UserDto.img != null">
                img = #{UserDto.img},
            </if>
        </set>
        WHERE id = #{id}
    </update>
    <delete id="deleteUser" parameterType="UserDto">
        DELETE FROM users
        WHERE id = #{id}
    </delete>
    <select id="loginUser" resultType="UserDto" parameterType="UserDto" >
        SELECT
            id, userId, password, name, img
        FROM
            users
        where userId = #{userId} and password = #{password}
    </select>
    <select id="idCheckUser" resultType="UserDto" parameterType="UserDto" >
        SELECT
            id, userId, name, img
        FROM
            users
        where userId = #{userId}
    </select>
</mapper>